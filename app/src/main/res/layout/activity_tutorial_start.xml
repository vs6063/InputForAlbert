<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.inputforalbert.TutorialStart">

    <TextView
        android:id="@+id/textView"
        android:layout_width="502dp"
        android:layout_height="324dp"
        android:text="The tutorial will now begin.\n\nPlease explain to the customer that you will be teaching them how to use this system step by step. "
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="356dp"
        android:layout_height="369dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@raw/speakerImage"
        tools:layout_editor_absoluteY="551dp"
        app:layout_constraintHorizontal_bias="0.2" />

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginRight="24dp"
        android:rotation="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@raw/button" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="288dp"
        android:layout_height="206dp"
        android:background="null"
        android:rotation="180"
        android:rotationX="9"
        app:srcCompat="@raw/button"
        android:layout_marginLeft="-26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>
