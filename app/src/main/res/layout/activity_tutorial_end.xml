<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.inputforalbert.TutorialEnd">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="429dp"
        android:layout_height="321dp"
        app:srcCompat="@raw/understand"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="130dp"
        app:layout_constraintHorizontal_bias="0.503" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:rotation="180"
        android:background="@null"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:srcCompat="@raw/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="449dp"
        android:layout_height="355dp"
        android:layout_marginTop="90dp"
        android:background="@null"
        android:text="The system instructions have now ended.\n\nEnsure the customer understands each step, and then proceed to the input screen!"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginRight="32dp"
        android:background="@android:color/holo_orange_light"
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:text="Finish"
        android:textSize="24sp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp" />

</android.support.constraint.ConstraintLayout>
